@model IEnumerable<Entidades.MobiliarioEntity>

<style>
    .divresumen {
        text-align: right;
        font-style: italic;
    }
</style>

@{
    ViewBag.Title = "Listar Mobiliarios";
}

<h2>Mobiliarios</h2>

<p> @Html.ActionLink("Realizar Cambio", "Compra") </p>
<div class="divresumen">
    <p>Ud ha seleccionado:@ViewBag.contador mobiliarios</p>
</div>
<table class="table">
    <tr>
        <th> Código del Mobiliario</th>        
        <th> Nombre </th>
        <th> Código del Tipo </th>
        <th> Código del Estado</th>
        <th> Código de la Estación</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td> @Html.DisplayFor(modelItem => item.codigo) </td>
        <td> @Html.DisplayFor(modelItem => item.descripcion) </td>
        <td> @Html.DisplayFor(modelItem => item.tipo) </td>
        <td> @Html.DisplayFor(modelItem => item.estado) </td>
        <td> @Html.DisplayFor(modelItem => item.estacion) </td>
        <td> @Html.ActionLink("Seleccionar", "Select", new { codigo = item.codigo }) </td>
    </tr>
}

</table>
